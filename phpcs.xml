<?xml version="1.0"?>
<ruleset name="WordPress Plugin Standards">
  <description>Enforce WordPress Coding Standards</description>

  <rule ref="WordPress-Extra"/>
  <rule ref="WordPress-Docs"/>
  <rule ref="PHPCompatibilityWP"/>

  <exclude-pattern>*/assets/css/*</exclude-pattern>
  <exclude-pattern>*/assets/scss/*</exclude-pattern>
  <exclude-pattern>*/assets/js/*</exclude-pattern>
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/build/*</exclude-pattern>
  <exclude-pattern>*.js</exclude-pattern>
  <exclude-pattern>*.css</exclude-pattern>
  <exclude-pattern>*.scss</exclude-pattern>

  <file>research-press</file>
</ruleset>
