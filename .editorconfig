root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.php]
indent_size = 8
indent_style = tab

[*.{js,jsx,ts,tsx}]
indent_size = 2
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,css,scss}]
indent_style = space
indent_size = 4
